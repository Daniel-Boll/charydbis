{
  "$schema": "http://json.schemastore.org/tsconfig",
  "include": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
